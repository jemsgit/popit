<?xml version='1.0' encoding='utf-8'?>
<widget id="com.popit.js" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Popit</name>
    <description>
        It is a simple popit application
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Jem Jem
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <!--  Paste this into your config.xml for correct access to the images generated by http://pgicons.abiro.com/.  -->
